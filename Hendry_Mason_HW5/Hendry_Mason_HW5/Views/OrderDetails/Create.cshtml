@model Hendry_Mason_HW5.Models.OrderDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuantityofProduct" class="control-label"></label>
                <input asp-for="QuantityofProduct" class="form-control" />
                <span asp-validation-for="QuantityofProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                @Html.DropDownList("SelectedProduct", (SelectList)ViewBag.AllProducts, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Place Order" class="btn btn-primary" />
            </div>
            @Html.HiddenFor(model => model.Order.OrderID)
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

