@model IEnumerable<Hendry_Mason_HW5.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Order Detail ID:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityofProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtendedPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDetailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityofProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtendedPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderDetailID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderDetailID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
