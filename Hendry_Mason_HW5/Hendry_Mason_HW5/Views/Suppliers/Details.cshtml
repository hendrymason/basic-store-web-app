@model Hendry_Mason_HW5.Models.Supplier

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<h5>Products from this supplier</h5>
<table class="table table-sm table-primary">
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (ProductSupplier ps in Model.ProductSuppliers)
    {
<tr>
    <td>@Html.DisplayFor(modelItem => ps.Product.ProductID)</td>
    <td>@Html.DisplayFor(modelItem => ps.Product.Name)</td>
    <td>@Html.DisplayFor(modelItem => ps.Product.Price)</td>
</tr>}
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SupplierID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
